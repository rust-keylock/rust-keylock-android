<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ExitMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.astonbitecode.rustkeylock.MainActivity" >

    <ScrollView
        android:id="@+id/scrollViewExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/exitMenuLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unsaved Data!"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/exitMenuDescriptionLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33sp"
                android:text="You will loose unsaved changes."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/exitMenuDescriptionLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Are you sure you want to exit?"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="33sp"
                android:columnCount="2"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/exitButtonNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/no"
                    android:text="No" >

                    <requestFocus />
                </Button>

                <Button
                    android:id="@+id/exitButtonYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/yes"
                    android:text="Yes" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>